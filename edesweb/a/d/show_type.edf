if( $r['seq']==$IniSeq ) echo ' style="font-weight:bold;color:red;"';
echo '>';
$txt = trim($r['caption']);
if( $r['type']=='L' ){
if( $txt=='' ){
echo "<img src=g/linea.gif width=100% height=2px style='cursor:default;margin-top:3px'>";
