list( $uValor, $uLong ) = explode(':',$uDim[$u] );
list( $uLong ) = explode(';',$uLong );
$uLong = trim($uLong);
switch( trim($uValor) ){
case 'min_login':
case 'max_login':
break;
case 'min_password':
