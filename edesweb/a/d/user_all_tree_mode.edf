[RowColor] ColorFila($row)
[PHPIni] l
	global $_LastUser;
	$_LastUser = "";
	$_FilaClass = "";
	function ColorFila($row){
		global $_LastUser, $_FilaClass;
		if( $row[7]!=$_LastUser ){
			$_LastUser = $row[7];
			if( $_FilaClass=="" ){
				$_FilaClass = 'class=" PieLista"';
			}else{
				$_FilaClass = "";
			}
		}
		return $_FilaClass;
     }

